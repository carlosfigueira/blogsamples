<Window x:Class="TestForAuthExtensions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Name="btnStart" Content="Click me" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                Margin="10" FontSize="30" Click="btnStart_Click" />
        <TextBox AcceptsReturn="True" Margin="10" Name="txtDebug" Grid.Row="1" />
    </Grid>
</Window>
